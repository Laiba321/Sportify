<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <corners android:radius="16dp" />
            <stroke android:width="1dip" android:color="#44A08D" />
            <gradient android:angle="-90" android:centerColor="#44A08D" android:endColor="#44A08D" android:startColor="#44A08D" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="16dp" />
            <stroke android:width="1dip" android:color="#44A08D" />
            <solid android:color="#44A08D" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="16dp" />
            <stroke android:width="1dip" android:color="#44A08D" />
            <gradient android:angle="-90" android:endColor="#44A08D" android:startColor="#44A08D" />
        </shape>
    </item>
</selector>
